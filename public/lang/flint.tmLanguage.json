{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Flint",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#constant"
		},
		{
			"include": "#primitives"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.flint",
					"match": "\\b(as|else|fn|fun|if|match|mut|pub|then|type|use|val)\\b"
				},
				{
					"name": "keyword.operator.arrow.flint",
					"match": "\\->"
				},
				{
					"name": "keyword.operator.pipe.flint",
					"match": "\\|>"
				},
				{
					"name": "keyword.operator.comparison.flint",
					"match": "(==|!=)"
				},
				{
					"name": "keyword.operator.comparison.float.flint",
					"match": "(<=\\.|>=\\.|<\\.|>\\.)"
				},
				{
					"name": "keyword.operator.comparison.int.flint",
					"match": "(<=|>=|<|>)"
				},
				{
					"name": "keyword.operator.logical.flint",
					"match": "(&&|\\|\\|)"
				},
				{
					"name": "keyword.operator.string.flint",
					"match": "<>"
				},
				{
					"name": "keyword.operator.other.flint",
					"match": "\\|"
				},
				{
					"name": "keyword.operator.arithmetic.float.flint",
					"match": "(\\+\\.|\\-\\.|/\\.|\\*\\.)"
				},
				{
					"name": "keyword.operator.arithmetic.int.flint",
					"match": "(\\+|\\-|/|\\*|%)"
				},
				{
					"name": "keyword.operator.assignment.flint",
					"match": "="
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.flint",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.flint",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.flint",
					"match": "\/\/.*"
				},
				{
					"name": "comment.block.flint",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"constant": {
			"patterns": [
				{
					"include": "#decimal_number"
				},
				{
					"name": "constant.language.flint",
					"match": "\\b(False|True)\\b"
				}
			]
		},
		"decimal_number": {
			"name": "constant.numeric.decimal.flint",
			"match": "\\b([0-9][0-9_]*)(\\.([0-9_]*)?(e-?[0-9]+)?)?\\b",
			"patterns": []
		},
		"primitives": {
			"name": "storage.type.primitive.flint",
			"match": "\\b(Bool|Byte|Float|F32|F64|Int|I8|I16|I32|I64|List|Nil|String|Unsigned|U8|U16|U32|U64)\\b"
		},
		"variables": {
			"patterns": [
				{
					"name": "support.variable",
					"match": "[A-Za-z]+[A-Za-z0-9_$]*'*"
				}
			]
		}
	},
	"scopeName": "source.flint",
	"fileTypes": [
		"flint"
	]
}